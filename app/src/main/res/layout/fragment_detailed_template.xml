<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.prime.primeclient.AnalyticsActivity.DetailedAnalytics.Helper.DetailedFragmentTemplate"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#000">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="4.5"
      android:weightSum="2"
      android:orientation="horizontal"
      android:padding="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#181717"
        android:layout_weight="1"
        android:layout_gravity="center">

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/bill"
          android:layout_gravity="end|center_vertical"
          android:layout_marginRight="10dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="gravity"
          android:text="Expenses"
          android:textSize="25sp"
          android:textColor="#fff"
          android:gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:id="@+id/expense"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#181717"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="gravity"
          android:text="Income"
          android:textSize="25sp"
          android:textColor="#fff"
          android:id="@+id/income"
          android:layout_gravity="end|center_vertical"
          android:layout_marginEnd="10dp"
          android:layout_marginRight="10dp"
          />

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/income"
          android:gravity="center_vertical"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"

          />

    </android.support.v7.widget.CardView>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:layout_weight="1"
      android:weightSum="2">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/leftRes">

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/rightRes">

    </android.support.v7.widget.RecyclerView>

  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="4.5"
      android:weightSum="2"
      android:orientation="horizontal"
      android:padding="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#181717"
        android:layout_weight="1"
        android:layout_gravity="center">

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/amd_low"
          android:layout_gravity="end|center_vertical"
          android:layout_marginRight="10dp"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textAlignment="gravity"
          android:text="500"
          android:textSize="20sp"
          android:textColor="#fff"
          android:gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:id="@+id/totalExpense"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#181717"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAlignment="gravity"
          android:text="500"
          android:textSize="20sp"
          android:textColor="#fff"
          android:id="@+id/totalAmount"
          android:layout_gravity="end|center_vertical"
          android:layout_marginEnd="10dp"
          android:layout_marginRight="10dp"
          />

      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/amd_low"
          android:gravity="center_vertical"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="10dp"
          android:layout_marginStart="10dp"

          />

    </android.support.v7.widget.CardView>
  </LinearLayout>


</LinearLayout>
